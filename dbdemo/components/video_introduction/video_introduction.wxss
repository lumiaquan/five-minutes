

.container{
  padding: 20rpx;
}
.author-box{
  display: flex;
  box-sizing: border-box;
  height: 180rpx;
}

.avatar{
  height: 100rpx;
  width: 100rpx;
  border-radius: 50rpx;
}
.author-date{
  display: flex;
  flex-direction: column;
  flex: 1;
}
.author{
  font-size: 28rpx;
  color: #0070c1;
  padding: 0rpx 0rpx 0rpx 10rpx;
}
.title{
  font-size: 40rpx;
  color: black;
  padding: 8rpx 100rpx 0rpx 10rpx;
}
.small-title{
  font-size: 24rpx;
  color: black; 
  padding: 10rpx 0rpx 0rpx 10rpx;
}
