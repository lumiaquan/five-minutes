
.comment-title{
  font-size: 32rpx;
  color: #323232;
  border-left: 4rpx solid #1296db;
  padding-left: 20rpx;
}

.comment-group{
  display: flex;
  padding: 40rpx 40rpx 0;
}

.comment-group .avatar{
  width:60rpx;
  height: 60rpx;
  border-radius: 50%;
}

.comment-group .right-group{
  flex: 1;
  padding-left: 20rpx;
}

.comment-group  .right-group  .top-group{
  font-size: 28rpx;
  display: flex;
  justify-content: flex-start;
  color: #323232;
}

.right-group .top-group .time{
  margin-left: 20rpx;
}

.right-group  .content-group{
  font-size: 32rpx;
  padding: 10rpx 0 20rpx;
  border-bottom: 1px solid #e4e4e4;
}

.left-group{
  width: 80rpx;
  /* background: red; */
}