.mine-info-group{
  width: 100%;
  height: 230rpx;
  background: #0070c1;
  display: flex;
  justify-content: flex-start;
  flex-wrap: nowrap;
}

.left-group{
  margin-left: 30rpx;
}
.left-group-avatar{
  overflow: hidden;
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  border: 1px solid #fff;
}

.right-group{
  flex: 1;
  /* display: flex;
  flex-wrap: wrap; */
}

.right-group .info-group{
  margin-left: 50rpx;
  margin-top: 30rpx;
  align-items: flex-end;
  font-size: 60rpx;
  color: #fff;
}

.name{
  font-size: 60rpx;
  color: #fff;
}

.isIdentifi{
  color: #fff;
  font-size: 30rpx;
}

.slogan-group{
  margin-left: 50rpx;
  margin-top: 30rpx;
}

.avatar{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  margin-left: 20rpx;
  margin-top: 40rpx;
  border: 1px solid #fff;
}

.lightBlue{
  background: #7ab3db;
  width: 100%;
  height: 26rpx;
}

.white-group{
  background: #fff;
  width: 100%;
}

.white-group .mid-group{
  width: 100%;
  display: flex;
  justify-content: space-around;
}

.bottom-group{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  width: 100%;
}