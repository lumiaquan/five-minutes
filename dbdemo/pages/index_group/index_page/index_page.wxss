page{
  background: whitesmoke;
}

.swiper{
  padding: 20rpx;
  height: 200rpx;
  border-radius: 10rpx;
}
.swiper image{
  width: 100%;
  height: 100%;
}

.top-group{
  display: flex;
  justify-content: center;
  background: #0070c1;
}

.top-swiper-group{
  width: 98%;
  margin-top: 60rpx;
}

.middlebackground{
  width: 100%;
  height: 100rpx;
}
.course-title-group{
  padding: 20rpx;
  background: whitesmoke;
  margin-top: 10rpx;
}

.course-top-group{
  display: flex;
  box-sizing: border-box;
}
.top-right{
  height: 230rpx;
  padding: 0rpx 0rpx 0rpx 10rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.course-middle-group{
  display: flex;

}
.middle-left{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.under-group{
  padding:  0rpx 0rpx 0rpx 12rpx;
}


.course-bottom-group{
  display: flex;
}
.bottom-right{
  padding: 0rpx 0rpx 0rpx 10rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.smallimage{
  width: 230rpx;
  height: 105rpx;
}

.bigimage{
  width: 230rpx;
  height: 230rpx;
  flex-shrink: 0;
}